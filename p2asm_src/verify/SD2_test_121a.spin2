'+-----------------------------------------------------------------------------+
readregister    mov     bytescnt,         #16     ' CMD9,10: CSD,CID register
                mov     cmdpar,           #0      '        PAR=$0,      16 bytes
readblock                                         ' CMD17: PAR=sector, 512 bytes
