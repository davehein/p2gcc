              MOV       lmm_p, lmm_lp                   '|
              MOV       lmm_p2,lmm_lp2                  '|
              MOV       lmm_c, lmm_lc                   '/
                andn    lmm_f, #_HDG                    ' & turn _HDG off
'               ----------------------------------------        
              RET                               wcz     '                       <--- return to calling routine --->
