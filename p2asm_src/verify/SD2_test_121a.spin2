                test    lmm_f, #_COUNT          wz      ' nz if count mode
        if_nz   jmp     #.count                         ' y:
                test    lmm_f, #_ADDR2          wz      ' nz if addr2 mode
        if_nz   jmp     #.addr2                         ' y:
