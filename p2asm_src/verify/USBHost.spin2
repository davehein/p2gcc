                rdbyte  dpar1, ##kbd_last_key           ' Peek at the last key-down keycode
                cmp     dpar1, #KEY_CAPSLK      wz
        if_z    mov     dpar1, #KEY_NO_KEY
                cmp     dpar1, #KEY_NO_KEY      wz
